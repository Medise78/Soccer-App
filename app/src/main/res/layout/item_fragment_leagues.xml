<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leaguesFragmentCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_150dp"
    android:layout_margin="@dimen/dimen_25dp"
    app:cardCornerRadius="@dimen/dimen_20dp"
    app:cardElevation="@dimen/dimen_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLeagues"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_gravity="start|center"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLeagueNameFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18sp"
                tools:text="bondesligua" />

            <TextView
                android:id="@+id/tvLeagueTypeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_10sp"
                tools:text="bondesligua" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imgStatusVector"
            android:layout_width="@dimen/dimen_7dp"
            android:layout_height="@dimen/dimen_7dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_40dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            tools:src="@drawable/circle_green" />

    </LinearLayout>


</androidx.cardview.widget.CardView>